{
	"name": "galhardo-ecommerce",
	"version": "3.0.0",
	"description": "A simple project to learn how to program a ecommerce",
	"main": "dist/server.js",
	"author": "Alex Galhardo <aleexgvieira@gmail.com>",
	"license": "MIT",
	"homepage": "https://github.com/AlexGalhardo/Galhardo-Ecommerce",
	"prisma": {
		"seed": "ts-node --transpile-only --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
	},
	"scripts": {
		"dev": "concurrently \"npm run watch:compile\" \"node ./dist/server.js\"",
		"start": "npm run build && node dist/server.js",
		"pm2": "npx pm2 start dist/server.js --name galhardo-app-api --interpreter node --watch",
		"pm2:stop:all": "npx pm2 stop all",
		"watch:compile": "npx swc src --out-dir dist/ && cp -r ./src/views dist/ && npx swc -w src --out-dir dist/",
		"build": "npm run delete:build && swc src -d dist && cp -r ./src/views dist/",
		"delete:build": "rm -rf dist",
		"postinstall": "npx prisma generate",
		"format": "prettier --write \"src/**/*.ts\" && npm run format:markdown",
		"format:markdown": "remark . --output",
		"vitest": "vitest",
		"vitest:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@faker-js/faker": "^8.0.2",
		"@prisma/client": "^5.1.1",
		"axios": "^1.4.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.20.2",
		"express-edge": "^3.0.0",
		"compression": "^1.7.4",
		"connect-flash": "^0.1.1",
		"cookie-parser": "^1.4.6",
		"correios-brasil": "^3.0.6",
		"cors": "^2.8.5",
		"csurf": "^1.11.0",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-async-errors": "^3.1.1",
		"express-recaptcha": "^5.1.0",
		"express-session": "^1.17.3",
		"express-validator": "^7.0.1",
		"fs-extra": "^11.1.1",
		"handlebars": "^4.7.8",
		"jsonwebtoken": "^9.0.1",
		"node-cache": "^5.1.2",
		"node-fetch": "^3.3.2",
		"nodemailer": "^6.9.4",
		"pagination": "^0.4.6",
		"amqplib": "^0.10.3",
		"query-string": "^8.1.0",
		"rand-token": "^1.0.1",
